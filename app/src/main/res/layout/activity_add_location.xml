<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".AddLocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/DeepForestGreen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add_location"
                    app:tint="@color/GoldYellow"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share a Hidden Gem"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="cursive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help other travelers discover amazing places!"
                    android:textColor="@color/GoldSand"
                    android:textSize="14sp"
                    android:fontFamily="cursive"
                    android:textAlignment="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Location Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_location_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Location Name *"
                        android:inputType="textCapWords"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Category -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <AutoCompleteTextView
                        android:id="@+id/et_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Category *"
                        android:inputType="none"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Province -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <AutoCompleteTextView
                        android:id="@+id/et_province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Province *"
                        android:inputType="none"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- City -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <AutoCompleteTextView
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City *"
                        android:inputType="none"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive"
                        android:enabled="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue"
                    app:counterEnabled="true"
                    app:counterMaxLength="500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description *"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="4"
                        android:maxLength="500"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Contributor Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_contributor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your Name *"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- YouTube URL (Optional) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_youtube_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="YouTube URL (Optional)"
                        android:inputType="textUri"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Image Selection Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location Image *"
                    android:textColor="@color/NavyBlue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    android:layout_marginBottom="8dp" />

                <!-- Image URL Input Option -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_image_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Image URL (Optional)"
                        android:inputType="textUri"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- OR Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="8dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/light_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" OR "
                        android:textColor="@color/light_gray"
                        android:fontFamily="cursive"
                        android:paddingHorizontal="16dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/light_gray" />

                </LinearLayout>

                <!-- Image Preview -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/offWhite">

                    <ImageView
                        android:id="@+id/iv_selected_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:contentDescription="Selected location image" />

                    <!-- Placeholder when no image selected -->
                    <LinearLayout
                        android:id="@+id/layout_image_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:alpha="0.6">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_image_placeholder"
                            app:tint="@color/light_gray"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No image selected"
                            android:textColor="@color/light_gray"
                            android:fontFamily="cursive" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Button Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp">

                    <!-- Select Image Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_image"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Select Image"
                        android:textColor="@color/DeepForestGreen"
                        android:fontFamily="cursive"
                        app:strokeColor="@color/DeepForestGreen"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_camera"
                        app:iconTint="@color/DeepForestGreen" />

                    <!-- Load from URL Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_load_url"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Load URL"
                        android:textColor="@color/DeepForestGreen"
                        android:fontFamily="cursive"
                        app:strokeColor="@color/DeepForestGreen"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_link"
                        app:iconTint="@color/DeepForestGreen" />

                </LinearLayout>

                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit_location"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/DeepForestGreen"
                    android:text="Share Location"
                    android:textColor="@color/GoldYellow"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_share"
                    app:iconTint="@color/GoldYellow" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/GoldSand">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/NavyBlue"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your contribution will help other travelers discover this amazing place. All submissions are reviewed before publishing."
                    android:textColor="@color/NavyBlue"
                    android:textSize="12sp"
                    android:fontFamily="cursive" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
