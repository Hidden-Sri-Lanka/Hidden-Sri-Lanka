<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".AddLocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            style="@style/HeaderCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                style="@style/CardContentPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add_location"
                    app:tint="@color/GoldYellow"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share a Hidden Gem"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="cursive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help other travelers discover amazing places!"
                    android:textColor="@color/GoldSand"
                    android:textSize="14sp"
                    android:fontFamily="cursive"
                    android:textAlignment="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Instructional Video Card -->
        <androidx.cardview.widget.CardView
            style="@style/PrimaryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                style="@style/CardContentPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/DeepForestGreen"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How to Add a Location"
                        android:textAlignment="textStart"
                        android:layout_marginBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tutorial"
                        android:textColor="@color/GoldYellow"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_tutorial_thumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_image_placeholder" />

                        <ImageView
                            android:id="@+id/btn_play_tutorial"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:padding="12dp"
                            android:src="@drawable/ic_link"
                            app:tint="@color/white" />

                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/CardSubtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Watch this quick tutorial to learn how to add locations effectively" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            style="@style/PrimaryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/CardContentPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Location Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_location_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Location Name *"
                        android:inputType="textCapWords"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Category -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <AutoCompleteTextView
                        android:id="@+id/et_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Category *"
                        android:inputType="none"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Province -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <AutoCompleteTextView
                        android:id="@+id/et_province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Province *"
                        android:inputType="none"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- City -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <AutoCompleteTextView
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City *"
                        android:inputType="none"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive"
                        android:enabled="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue"
                    app:counterEnabled="true"
                    app:counterMaxLength="3000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description (Share detailed information about this amazing place) *"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="6"
                        android:maxLength="3000"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Contributor Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_contributor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your Name *"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- YouTube URL (Optional) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_youtube_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="YouTube URL (Optional)"
                        android:inputType="textUri"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Smart Image URL Input (Handles both Google Photos and direct URLs) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location Images *"
                    android:textColor="@color/NavyBlue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/DeepForestGreen"
                    app:hintTextColor="@color/NavyBlue"
                    app:helperText="Paste image URL or Google Photos share link and tap 'Add Image'"
                    app:helperTextTextColor="@color/GoldSand">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_image_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Image URL or Google Photos Link"
                        android:inputType="textUri"
                        android:textColor="@color/NavyBlue"
                        android:fontFamily="cursive" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Image Gallery -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/offWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Image Gallery"
                            android:textColor="@color/NavyBlue"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="cursive"
                            android:layout_marginBottom="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_image_gallery"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:clipToPadding="false"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp" />

                        <!-- Placeholder when no images -->
                        <LinearLayout
                            android:id="@+id/layout_gallery_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:alpha="0.6">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_image_placeholder"
                                app:tint="@color/light_gray"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No images added yet"
                                android:textColor="@color/light_gray"
                                android:fontFamily="cursive"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Load from URL Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_load_url"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Add Image from URL"
                    android:textColor="@color/DeepForestGreen"
                    android:fontFamily="cursive"
                    app:strokeColor="@color/DeepForestGreen"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_link"
                    app:iconTint="@color/DeepForestGreen" />

                <!-- Import from Google Photos Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_google_photos"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Import from Google Photos"
                    android:textColor="@color/GoldYellow"
                    android:fontFamily="cursive"
                    app:strokeColor="@color/GoldYellow"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_google_photos"
                    app:iconTint="@color/GoldYellow" />

                <!-- Clear All Images Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear_images"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="Clear All Images"
                    android:textColor="@color/error"
                    android:fontFamily="cursive"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="@color/error"
                    android:visibility="gone" />

                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit_location"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/DeepForestGreen"
                    android:text="Share Location"
                    android:textColor="@color/GoldYellow"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_share"
                    app:iconTint="@color/GoldYellow" />

                <!-- Progress Bar for loading states -->
                <ProgressBar
                    android:id="@+id/progress_bar_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/DeepForestGreen" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/GoldSand">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/NavyBlue"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Please provide a valid image URL (http/https). Use image hosting services like Imgur, Google Photos, or Dropbox for best results. Your contribution helps travelers discover amazing places!"
                    android:textColor="@color/NavyBlue"
                    android:textSize="12sp"
                    android:fontFamily="cursive" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
