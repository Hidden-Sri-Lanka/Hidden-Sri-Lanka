<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/splashImageView"
        android:layout_width="256dp"
        android:layout_height="208dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"
        android:contentDescription="@drawable/hsl_only_logo_transparent_black"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/hsl_only_logo_transparent_black" />

    <TextView
        android:id="@+id/txtWelcome"
        style="@style/HeadingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="40dp"
        android:text="@string/uncover_the_wonders_beyond_the_guidebook" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextPageButton"
        style="@style/PrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="100dp"
        android:onClick="exploreShere"
        android:text="@string/next"
        app:cornerRadius="20dp" />

</LinearLayout>