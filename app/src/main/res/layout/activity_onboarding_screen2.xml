<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".OnboardingScreen2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/txtWelcome"
                style="@style/HeadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="0dp"
                android:text="@string/discover_sri_lanka_s_hidden_wonders" />

            <TextView
                android:id="@+id/txtWelcomedescript"
                style="@style/BodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="0dp"
                android:text="@string/simple_paragraph_1"
                android:textSize="12sp"
                android:textStyle="italic" />

            <androidx.cardview.widget.CardView
                style="@style/AppCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="38dp">

                    <TextView
                        android:id="@+id/sampleTxt"
                        style="@style/HeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="casual"
                        android:text="Explore Attractions ðŸš€"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="264dp"
                        android:layout_height="205dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@raw/sigiriya" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/AppCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="38dp">

                    <TextView
                        android:id="@+id/sampleTxt2"
                        style="@style/HeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="casual"
                        android:text="Discover unique destinations â›°ï¸"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="264dp"
                        android:layout_height="205dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@raw/polonnaruwa" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextPageButton"
                style="@style/PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="100dp"
                android:onClick="LoginPage"
                android:text="Let's Go"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>