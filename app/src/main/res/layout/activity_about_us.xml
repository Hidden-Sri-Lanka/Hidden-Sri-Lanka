<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".AboutUsActivity">

    <!-- content of About us page -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo image -->
        <!--        TODO: Change the logo to transparent withot text
        Piority Low -->
        <ImageView
            android:id="@+id/splashImageView"
            android:layout_width="172dp"
            android:layout_height="122dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:contentDescription="App Logo"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/hsl_only_logo_transparent_black" />

        <!-- Text in About Page -->
        <TextView
            android:id="@+id/txtWelcome"
            style="@style/AboutPage.TextView.Title"
            android:text="Hidden Sri Lanka" />

        <TextView
            android:id="@+id/txtMission"
            style="@style/AboutPage.TextView.Mission"
            android:text="Mission ðŸŽ¯" />

        <TextView
            android:id="@+id/txtaboutParagraph"
            style="@style/AboutPage.TextView.Paragraph"
            android:text="@string/aboutParagraph" />

        <TextView
            android:id="@+id/devBy"
            style="@style/AboutPage.TextView.Paragraph"
            android:fontFamily="sans-serif-black"
            android:text="@string/devBy" />

        <!-- Links to other pages -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrivacyPolicy"
            style="@style/AboutPage.Button.Link"
            android:onClick="privacyPolicy"
            android:text="Privacy Policy" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTerms"
            style="@style/AboutPage.Button.Link"
            android:onClick="Terms"
            android:text="Terms of Service" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContact"
            style="@style/AboutPage.Button.Link"
            android:layout_marginBottom="50dp"
            android:onClick="Contact"
            android:text="Contact Us: asitha.contact.me@gmail.com" />

    </LinearLayout>
</ScrollView>