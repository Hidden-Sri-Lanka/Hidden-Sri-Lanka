<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme with consistent color scheme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/DeepForestGreen</item>
        <item name="colorPrimaryVariant">@color/NavyBlue</item>
        <item name="colorOnPrimary">@color/GoldYellow</item>
        <item name="colorSecondary">@color/GoldSand</item>
        <item name="colorSecondaryVariant">@color/Tanbrown</item>
        <item name="colorOnSecondary">@color/NavyBlue</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/NavyBlue</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/DeepForestGreen</item>
        <item name="android:textColor">@color/GoldYellow</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/DeepForestGreen</item>
    </style>

    <!-- Primary Text Style -->
    <style name="PrimaryText">
        <item name="android:textColor">@color/NavyBlue</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleText" parent="PrimaryText">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Heading Text Style -->
    <style name="HeadingText" parent="PrimaryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body Text Style -->
    <style name="BodyText" parent="PrimaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/NavyBlue</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- Card Style (main Card Style for all boxes)-->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">20dp</item>
        <item name="android:layout_margin">30dp</item>
    </style>

    <!-- Styles for About Us Page -->
    <style name="AboutPage.TextView.Base" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/NavyBlue</item>
    </style>

    <style name="AboutPage.TextView.Title" parent="AboutPage.TextView.Base">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="AboutPage.TextView.Mission" parent="AboutPage.TextView.Base">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="AboutPage.TextView.Paragraph" parent="AboutPage.TextView.Base">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="AboutPage.Button.Link" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/DeepForestGreen</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toolbar Title Appearance Style -->
    <style name="ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/NavyBlue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- UNIFIED CARD DESIGN SYSTEM -->

    <!-- Primary Card Style - Main content cards -->
    <style name="PrimaryCard">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Secondary Card Style - Information/feature cards -->
    <style name="SecondaryCard">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/GoldSand</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Attraction Card Style - Specific for attraction items -->
    <style name="AttractionCard" parent="PrimaryCard">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">12dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Header Card Style - For page headers -->
    <style name="HeaderCard">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/DeepForestGreen</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Card Content Padding -->
    <style name="CardContentPadding">
        <item name="android:padding">20dp</item>
    </style>

    <!-- Card Title Text -->
    <style name="CardTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/NavyBlue</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Card Subtitle Text -->
    <style name="CardSubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Card Description Text -->
    <style name="CardDescriptionText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/NavyBlue</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

</resources>